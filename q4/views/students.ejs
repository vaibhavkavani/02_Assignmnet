<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; text-align: center; }
    table { width: 100%; border-collapse: collapse; margin: 20px 0; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #f2f2f2; }
    .simple-button { padding: 5px 10px; background-color: #007BFF; color: white; border: none; border-radius: 3px; cursor: pointer; }
  </style>
</head>
<body>
  <h1>Student List</h1>
  <h2>Details of Registered Students</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Course</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.age %> years</td>
          <td><%= student.course %></td>
          <td>
            <a href="/students/<%= student._id %>/edit" class="simple-button">Edit</a>
            <form action="/students/<%= student._id %>/delete" method="POST" style="display:inline;">
              <button type="submit" class="simple-button">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %> 
    </tbody>
  </table>
  <a href="/register">Register a New Student</a><br>
  <a href="/logout">Logout</a>
</body>
</html>
